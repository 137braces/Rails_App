<%= render 'users/left_partial' %>

<div class="main-contents">
<p style="font-size:2em; font-weight:bolder;">お相手からのいいね</p>
<div class="fas fa-search search-name" id="search-form"></div>

  <div class="user-grid">
      <% @users.each do |user| %>
        <ul class="user-info">
          <%  current_user.following?(user) %>
          <li style="margin-left:41px;"><%= image_tag user.image.url, class: "user_icon" %></li>
          <li><p style= text-align:center;><%= user.name %></p></li>
            <%= render 'follow_form' if logged_in? %>
        </ul>
        <% end %>
  </div>


</div>